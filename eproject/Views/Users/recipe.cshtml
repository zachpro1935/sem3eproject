@model IEnumerable<eproject.Models.Recipe>

@{
    ViewBag.Title = "recipe";
    Layout = "~/Views/Shared/home.cshtml";
}

<div class="badichvu">
    <div class="container ">
        <div class="row">
            <div class="col-sm-12 wow flipInY">
                <h2 style="text-align:center; color:orange; text-decoration:none;">
                    @Html.ActionLink("Add Your Recipe", "Create", "recipes")<br /><hr /><br />
                </h2>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.category)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.type)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.createAt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.enabled)
                        </th>


                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.category)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.createAt)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.enabled)
                            </td>


                            <td>
                                @Html.ActionLink("Edit", "Edit", "recipes", new { id = item.id }, null) |
                                @Html.ActionLink("Details", "recipedetail", "recipeextend", new { id = item.id },null) |

                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>