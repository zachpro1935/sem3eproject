                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("FAQ", "FAQ", "home", null, htmlAttributes: new { @class = "nav-link" })

                        </li>

                        @if (Session["userId"] != null)
                        {
                            <li class="nav-item">

                                @Html.ActionLink(Session["email"].ToString(), "edit", "users", new { id = Session["userId"] }, htmlAttributes: new { @class = "nav-link" })
                            </li>
                        }
                        <li class="nav-item datbanmenu">
                            @if (Session["userId"] != null)
                            {
                                @Html.ActionLink("LOGOUT", "logout", "users", null, htmlAttributes: new { @class = "nav-link btn btn-warning wow bounce" })


                            }
                            @if (Session["userId"] == null)
                            {
                                if (ViewContext.RouteData.Values["action"].ToString() == "login")
                                {
                                    @Html.ActionLink("REGISTER", "create", "users", null, htmlAttributes: new { @class = "nav-link btn btn-warning wow bounce" })
                                }
                                else
                                {
                                    @Html.ActionLink("LOGIN", "login", "users", null, htmlAttributes: new { @class = "nav-link btn btn-warning wow bounce" })
                                }

                            }

                        </li>
                    </ul>
                </div>
            </div> <!-- het container -->
        </nav>
